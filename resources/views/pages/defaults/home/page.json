{
  "title": "Home",
  "slug": "home",
  "version": "0.1",
  "lang": {
    "en": {
      "singular": "page",
      "plural": "pages"
    }
  },
  "description": "Description goes here.",
  "category": "defaults",
  "fields": {
    "title" : {
      "display name": "Title",
      "description": "The title of this page.",
      "type": "text",
      "validations": {
        "required": true
      }
    },
    "meta_description" : {
      "display name": "Meta Description",
      "description": "Describe this page (this appears in search engine results).",
      "type": "textarea",
      "isThumbnail": true
    },
    "slug" : {
      "display name": "Slug",
      "description": "The URL slug of this content.",
      "type": "text",
      "validations": {
        "required": true
      }
    },
    "status": {
      "type": "select",
      "options": {
        "Active": "ACTIVE",
        "Inactive": "INACTIVE"
      },
      "validations": {
        "required": true
      }
    }
  },
  "sections": {
    "heading": {
      "title": "Heading",
      "slug": "heading",
      "fields": {
        "headline": {
          "type": "text",
          "slug": "headline",
          "description": "A short summary of the page.",
          "placeholder": "Write a headline."
        },
        "tagline": {
          "type": "text",
          "slug": "tagline",
          "description": "Tagline.",
          "placeholder": "Write a compelling hook."
        },
        "button": {
          "type": "text",
          "slug": "button",
          "description": "A short call to action phrase.",
          "placeholder": "Learn More"
        },
        "button_link": {
          "type": "text",
          "slug": "link",
          "description": "A url to link to. (optional)",
          "placeholder": "http://www.example.com",
          "validations": {
            "url": true
          }
        },
        "background": {
          "type": "text",
          "slug": "background",
          "description": "Url for a background image (optional).",
          "placeholder": "http://..."
        },
        "background_type": {
          "type": "select",
          "options": ["none", "light", "dark"],
          "slug": "background_type",
          "description": "Is the background image dark or light?",
          "placeholder": "Select an option."
        },
        "image": {
          "type": "text",
          "slug": "image",
          "description": "Url for a featured image (optional).",
          "placeholder": "http://..."
        },
        "intro": {
          "type": "textarea",
          "slug": "intro",
          "description": "Write a bit of intro text (optional).",
          "placeholder": "Something exciting goes here..."
        },
        "headersize": {
          "type": "select",
          "options": ["large", "small"],
          "slug": "headersize",
          "description": "How big should the page header be?",
          "placeholder": "Select a size"
        },
        "footer": {
          "type": "code",
          "mode": "html",
          "slug": "footer",
          "description": "Custom HTML after this section (optional)",
          "placeholder": "<section> This is example content. </section>"
        }
      }
    },
    "content": {
      "title": "Content",
      "slug": "content",
      "fields": {
        "show_features": {
          "type": "select",
          "options": ["yes", "no"],
          "slug": "show_features",
          "description": "Do you want to display a list of features?",
          "placeholder": "Select an option."
        },
        "show_content": {
          "type": "select",
          "options": ["yes", "no"],
          "slug": "show_features",
          "description": "Do you want to display a list of content?",
          "placeholder": "Select an option."
        },
        "content_tags": {
          "type": "text",
          "slug": "image",
          "description": "Comma-separated list of content tags.",
          "placeholder": "announcements,promotions,tutorials"
        }
      }
    }
  }
}