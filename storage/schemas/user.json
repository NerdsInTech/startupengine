{
  "namespace": "App\\User",
  "lang": {
    "en": {
      "singular": "user",
      "plural": "users"
    }
  },
  "version": "0.1",
  "metadata": {
    "taggable": false,
    "title_key": "id",
    "primary_key": "id",
    "readonly": {
      "id": {
        "label": "User ID",
        "column": "id"
      }
    }
  },
  "fields": {
    "name": {
      "display name": "Name",
      "description": "The name of this user.",
      "type": "text",
      "validations": {
        "required": true
      }
    },
    "email": {
      "display name": "E-mail",
      "description": "Your e-mail address.",
      "type": "text",
      "validations": {
        "email": true,
        "required": true,
        "unique": "users"
      }
    },
    "avatar": {
      "display name": "Profile Picture",
      "description": "A picture of you.",
      "type": "image",
      "validations": {

      }
    },
    "bio": {
      "display name": "Bio",
      "description": "A short bio.",
      "type": "textarea",
      "validations": {
      }
    },
    "status": {
      "type": "select",
      "options": {
        "Active": "ACTIVE",
        "Inactive": "INACTIVE"
      },
      "validations": {

      }
    },
    "password": {
      "type": "text",
      "validations": {
        "required": true
      }
    }
  },
  "sections": {
    "about": {
      "slug": "about",
      "title": "About",
      "fields": {
        "location": {
          "type": "text",
          "description": "Your location.",
          "validations": {
          }
        },
        "website": {
          "type": "text",
          "description": "URL of your website.",
          "validations": {
            "url": true
          }
        },
        "twitter": {
          "type": "text",
          "description": "Your twitter username.",
          "validations": {
          }
        }
      }
    }
  },
  "permissions": {
    "add": {
      "requires_auth": true,
      "requires_permission":
      ["add_users"]
    },
    "edit": {
      "requires_auth": true,
      "requires_permission":
      ["edit_users"]
    },
    "delete": {
      "requires_auth": true,
      "requires_permission":
      ["delete_users"]
    }
  }
}