{
  "namespace": "Page",
  "lang": {
    "en": {
      "singular": "page",
      "plural": "pages"
    }
  },
  "version": "0.1",
  "metadata": {
    "title_key": "title",
    "primary_key": "id",
    "id": {
      "display name": "Page ID",
      "read_only": true
    },
    "taggable": true,
    "readonly" : {
      "id":{
        "label": "Page ID",
        "column": "id"
      }
    }
  },
  "fields": {
    "title" : {
      "display name": "Title",
      "description": "The title of this page.",
      "type": "text",
      "validations": {
        "required": true
      }
    },
    "meta_description" : {
      "display name": "Meta Description",
      "description": "Describe this page (this appears in search engine results).",
      "type": "textarea",
      "isThumbnail": true
    },
    "slug" : {
      "display name": "Slug",
      "description": "The URL slug of this content.",
      "type": "text",
      "validations": {
        "required": true
      }
    },
    "status": {
      "type": "select",
      "options": {
        "Active": "ACTIVE",
        "Inactive": "INACTIVE"
      },
      "validations": {
        "required": true
      }
    }
  },
  "sections": {
    "heading": {
      "slug": "heading",
      "title": "Heading",
      "fields": {
        "headline": {
          "type": "text",
          "description": "This appears at the top of the page.",
          "validations": {
            "required": true
          }
        },
        "button": {
          "type": "text",
          "description": "Text for the button at the top of the page.",
          "validations": {
            "required": true
          }
        },
        "button_link": {
          "display name": "Button Link",
          "type": "text",
          "description": "URL for the button at the top of the page.",
          "validations": {
            "required": true
          },
          "conditions": "(((((data || {}).content || {}).sections || {}).HEADING || {}).fields|| {}).button != null"
        },
        "background": {
          "type": "image",
          "isThumbnail": true,
          "validations": {
            "url": true
          }
        }
      }
    }
  }
}