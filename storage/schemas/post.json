{
  "namespace": "App\\Post",
  "lang": {
    "en": {
      "singular": "content item",
      "plural": "content items"
    }
  },
  "version": "0.1",
  "metadata": {
    "title_key": "title",
    "primary_key": "id",
    "taggable": true,
    "readonly": {
      "id":{
        "label": "Post ID",
        "column": "id"
      }
    }
  },
  "fields": {
    "title" : {
      "display name": "Title",
      "description": "The title of this content.",
      "type": "text",
      "validations": {
        "required": true,
        "max": 100
      }
    },
    "slug" : {
      "display name": "Slug",
      "description": "The URL slug of this content.",
      "type": "text",
      "validations": {
      }
    },
    "excerpt" : {
      "display name": "Excerpt",
      "description": "A brief excerpt of this content.",
      "type": "text",
      "isExcerpt": true,
      "validations": {
      }
    },
    "status": {
      "type": "select",
      "options": {
        "Pending": "PENDING",
        "Published": "PUBLISHED",
        "Unpublished": "UNPUBLISHED"
      },
      "validations": {
        "required": true
      }
    }
  },
  "sections": {
  },
  "permissions": {
    "edit": {
      "requires_auth": true,
      "requires_permission":
      ["edit_pages"]
    },
    "read": {}
  }
}